	.triangle-33 {
		animation-delay: -16s;
	}
	.triangle-34 {
		animation-delay: -16.5s;
	}

	@keyframes triangle-animation{
		0%{
			transform: scale(0) rotate(0deg);
			opacity: 1;
			filter: hue-rotate(0deg);
		}
		
		100%{
			transform: scale(3) rotate(4000deg);
			opacity: 0;
			filter: hue-rotate(1080deg);
		}
	}

	@keyframes invert {
		0% {
			filter: invert(0);
		}

		50% {
			filter: invert(1);
		}

		100% {
			filter: invert(0);
		}
		
	}

	@keyframes inverted-invert {
		0% {
			filter: invert(1);
		}

		50% {
			filter: invert(0);
		}

		100% {
			filter: invert(1);
		}
		
	}

	@media only screen and (max-width: 685px)  {
		.eye {
			width: 70vw;
		}
	}

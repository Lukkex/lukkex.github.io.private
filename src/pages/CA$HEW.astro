---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

const { title, description } = Astro.props;
---

<head>
	
	<BaseHead title={title} description={description} />
	<audio id="myAudio" src="../shh/ca$hew room.mp3"></audio> <!-- Source for OG beat: https://www.youtube.com/watch?v=W3O3A9SHVLs&list=RDW3O3A9SHVLs&start_radio=1 -->

	<script>
		const phrases = [
		"\"{How did you get in here...? Oh well; enjoy your $tay.}\"",
		"\"{I like to u$e curly bracket$ cuz they look$ like c... for ca$h... pretty clever, ain\'t it?\"}",
		"\"{Money... ohhhhh my goodne$$ i love ca$h... $o delectable, $uch a vibrant green, it almo$t look$ ta$ty (don\'t try it; i have. ta$te$ like dirty finger$. wait where i$ my mouth again? have you $een it?}\"",
		"\"{OUUUUUUUUUUUUUUU CA$HEWWWWWWWWWWWWWWWW!!!!!!!!!!!!!}\"",
		"\"{Clicked the ©, did ya? Yeah, that\'$ \"©\" for ©a$hew baby. BD}\"",
		"\"{Check out that \"MANDALA\" place before? pretty $$$$$nazzy $pot}\"",
		"\"{DID YOU KNOW THAT CA$HEW$ COME FROM A FRUIT??? CA$HEW$, CA$HEW$, FROM A F-F-F-FRUIT...?}\""
		];

		function getRandomPhrase() {
		const index = Math.floor(Math.random() * phrases.length);
		return phrases[index];
		}

		window.addEventListener('load', () => {
		const delay = 0;

		setTimeout(() => {
			const audio = document.getElementById('myAudio');
			const phrase = getRandomPhrase();
			document.getElementById('ca$h_speech').innerHTML = phrase;
			audio.play().catch(err => {
			console.error("Playback failed:", err);
			});
		}, delay);
		});
	</script>

	<body>
		<Header />
		<main>
			<img src="../shh/2ca$hew logo.png" class="logo" style="width: 100vw;"/>
			<div class="cash_image"> 
				<div class="cash">
					<p id="ca$h_speech" class="Cashew-right"></p>
				</div>
				<img src="../shh/ca$hew basic.gif"  style="width: 50vw;">
			</div>
		</main>
	</body>

	<style>
		.cash{
			padding: 20px;
			background-color: black;
			border-radius: 15px;
		}

		.logo {
			animation: hueChange 10s infinite linear;
		}

		body {
			background-image: url("../shh/bob dolla ca$h.gif");
			background-repeat: repeat;
			margin: 0;
			padding: 0;
			width: 100%;
			height: 100%;
			align-items: center;
			justify-items: center;
		}

		main {
			background-image: url("../shh/bw_ca$hew.png");
			background-repeat: repeat;
			width: 100%;
			height: 100vh;
			align-items: center;
			justify-items: center;
			font-family: monospace;
		}
		.prose {
			margin: auto;
			padding: 1em;
			color: rgb(var(--gray-dark));
		}
		.title {
			margin-bottom: 1em;
			padding: 1em 0;
			text-align: center;
			line-height: 1;
		}
		.title h1 {
			margin: 0 0 0.5em 0;
		}
		.date {
			margin-bottom: 0.5em;
			color: rgb(var(--gray));
		}
		.last-updated-on {
			font-style: italic;
		}

		img {
			image-rendering: pixelated;
			width: 50%;
			align-items: center;
			justify-items: center;
		}

		.cash_image {
			width: 40%; 
			position: absolute;
			top: 70%;
			transform: translateY(-50%);
			animation: moveSinusoidal 5s infinite cubic-bezier(0.68, 0.55, 0.265, 1.55), moveSinusoidalVertical 13s infinite cubic-bezier(0.25, 0.46, 0.45, 0.94);
		}

		@keyframes moveSinusoidal {
			0% {
				left: 0%; 
			}
			50% {
				left: 50%; 
			}
			100% {
				left: 0%;
			}
		}
		
		@keyframes moveSinusoidalVertical {
			0% {
				top: 70%; 
			}
			50% {
				top: 80%; 
			}
			100% {
				top: 70%;
			}
		}

		@keyframes hueChange {
			0% {
				filter: hue-rotate(0deg); 
			}
			100% {
				filter: hue-rotate(360deg);
			}
		}

	</style>
</head>